   let myInterval

function myIsOnScreen(){
   if (parseInt(document.getElementById('myImg01').style.left) > 1500) {
     document.getElementById('myImg01').style.left = '20px'
   }
}

document.addEventListener('keydown', function (event) {

   if (event.key === 'd') {
      clearInterval(myInterval)
      myInterval = setInterval(function(){
   
         document.getElementById('myImg01').style.left = 
             parseInt(document.getElementById('myImg01').style.left) + 3
         myIsOnScreen()
	myCheckHit()
	myCoinChecklist()

} ,10)
   }

   if (event.key === 'a') {
      clearInterval(myInterval)
      myInterval = setInterval(function(){
   
         document.getElementById('myImg01').style.left = 
             parseInt(document.getElementById('myImg01').style.left) - 3
         myIsOnScreen()
	myCheckHit()
	myCoinChecklist()

} ,10)
   }

   if (event.key === 'w') {
      clearInterval(myInterval)
      myInterval = setInterval(function(){
   
         document.getElementById('myImg01').style.top = 
             parseInt(document.getElementById('myImg01').style.top) - 3
         myIsOnScreen()
	myCheckHit()
	myCoinChecklist()
} ,10)
   }

   if (event.key === 's') {
      clearInterval(myInterval)
      myInterval = setInterval(function(){
   
         document.getElementById('myImg01').style.top = 
             parseInt(document.getElementById('myImg01').style.top) + 3
         myIsOnScreen()
	myCheckHit()
	myCoinChecklist()

} ,10)
   }
});

